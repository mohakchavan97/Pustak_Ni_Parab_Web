<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Pustak Ni Parab</display-name>
    <servlet>
        <servlet-name>UserSignedIn</servlet-name>
        <servlet-class>com.mohakchavan.pustakniparab_web.UserSignedIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomePage</servlet-name>
        <servlet-class>com.mohakchavan.pustakniparab_web.MainServlets.HomePage</servlet-class>
    </servlet>
    <servlet>
        <description>Login page for Pustak Ni Parab.</description>
        <servlet-name>LoginPage</servlet-name>
        <jsp-file>/mainPages/loginPage.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.mohakchavan.pustakniparab_web.MainServlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewBooks</servlet-name>
        <jsp-file>/mainPages/newBooks.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserSignedIn</servlet-name>
        <url-pattern>/UserSignedIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomePage</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewBooks</servlet-name>
        <url-pattern>/newBooks</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
	    30
	</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>mainPages/loginPage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
